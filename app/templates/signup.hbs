<div class="container">
    <div class="row centered-form">
        <hr class="prettyline">
        <br/>
        <center>
            <h1><b>Welcome!</b></h1>
            <h4>You need to sign in or register for this service</h4>
            <br/>
            <br/>
            <div class="btn-group-vertical">
                <button type="button" class="btn btn-color" {{action 'registerindividual'}}>Individual</button>
                <br/>or
                <br/>
                <br/>
                <button type="button" class="btn btn-color" {{action 'registerorganisation'}}>Organisation</button>
            </div>
        </center>
        <br/>
        <hr class="prettyline">
    </div>
</div>

{{#if isIndividualAuthorize}}
<div class="container">
    <div class="row main">
        <div class="panel-title text-center">
            <h1 class="title">Individual</h1>
        </div>
        <div class="main-login main-center">
            <form class="form-horizontal" method="post" action="#">
                <div class="form-group">
                    <div class="cols-sm-10">
                        <div class="input-group">
                            <div class="input-group-addon">
                                <span class="glyphicon glyphicon-user"></span>
                            </div>
                            {{validated-input type="text" model=this valuePath='name' placeholder="Enter your Name"}}
                            {{error}}
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="cols-sm-10">
                        <div class="input-group">
                            <div class="input-group-addon">
                                <span class="glyphicon glyphicon-envelope"></span>
                            </div>
                            {{validated-input type="text" model=this valuePath='email' placeholder="Enter your Email"}}
                            {{error}}
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="cols-sm-10">
                        <div class="input-group">
                            <div class="input-group-addon">
                                <span class="glyphicon glyphicon-envelope"></span>
                            </div>
                            {{validated-input type="text" model=this valuePath='confirmemail' placeholder="Confirm your Email"}}
                            {{error}}
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="cols-sm-10">
                        <div class="input-group">
                            <div class="input-group-addon">
                                <span class="glyphicon glyphicon-earphone"></span>
                            </div>
                            {{validated-input type="text" model=this valuePath='phonenumber' placeholder="Enter your Phone Number "}}
                            {{error}}
                        </div>
                    </div>
                </div>
                <div class="form-group ">
                    <button type="button" class="btn btn-color" {{action "toggleModal"}} disabled={{v-get this 'isInvalid'}}>Register</button>
                    {{#if isShowingModal}}
                        {{#modal-dialog close="toggleModal" targetAttachment="center" translucentOverlay=true}}
                              <p>User account created. Please verify email address </p>
                              <p>to login and start using the website. Please check </p>
                              <p>the spam folder if you don’t find the message in</p>
                              <p>your inbox.</p>
                        {{/modal-dialog}}
                    {{/if}}
                </div>
            </form>
        </div>
    </div>
</div>
{{/if}}

