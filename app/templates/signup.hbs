<div class="container">
   <div class="row centered-form">
      <hr class="prettyline"><br/>
      <center>
         <h1><b>Welcome!</b></h1>
         <h4>You need to sign in or register for this service</h4><br/><br/>
         <div class="btn-group-vertical">
            <button type="button" class="btn btn-color" {{action 'registerindividual'}}>Individual</button>
            <br/>or<br/><br/>
            <button type="button" class="btn btn-color" {{action 'registerorganisation'}}>Organisation</button>
         </div>
      </center><br/>
      <hr class="prettyline">
   </div>
</div>

{{#if isIndividualAuthorize}}
    <div class="container">
        <div class="row main">
            <div class="panel-title text-center">
                <h1 class="title">Individual</h1>
            </div>
            <div class="main-login main-center">
                <form class="form-horizontal" method="post" action="#">
                    <div class="form-group">
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <span class="glyphicon glyphicon-user"></span>
                                </div>
                                <input type="text" class="form-control" name="name" id="name" placeholder="Enter your Name" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <span class="glyphicon glyphicon-envelope"></span>
                                </div>
                                <input type="text" class="form-control" name="email" id="email" placeholder="Enter your Email" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <span class="glyphicon glyphicon-envelope"></span>
                                </div>
                                <input type="text" class="form-control" name="confirmemailid" id="confirmemailid" placeholder="Confirm your Email" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <span class="glyphicon glyphicon-earphone"></span>
                                </div>
                                <input type="text" class="form-control" name="phonenumber" id="phonenumber" placeholder="Enter your Phone Number " />
                            </div>
                        </div>
                    </div>
                    <div class="form-group ">
                        <button type="button" class="btn btn-color">Register</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{{/if}}

